<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/trippreferences_sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/trippreferences_ll_cancelon_container"
        android:fillViewport="true"
        android:background="@android:color/black"
           android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"  >

        <LinearLayout
            android:id="@+id/trippreferences_ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
         >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trippreferences_tv_referenceorigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/trippreferences_tv_referenceorigin"
                    android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textColor="@android:color/white"/>

                <EditText
                    android:id="@+id/trippreferences_et_referenceorigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/trippreferences_et_referenceorigin_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trippreferences_tv_taxitype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/trippreferences_tv_taxitype"
                    android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textColor="@android:color/white"/>

                <codigo.labplc.mx.mitaxiusuario.googlemaps.groups.MyViewGroup
                    android:id="@+id/trippreferences_vg_taxitype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trippreferences_tv_taxispecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/trippreferences_tv_taxispecial"
                    android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textColor="@android:color/white"/>

                <codigo.labplc.mx.mitaxiusuario.googlemaps.groups.MyViewGroup
                    android:id="@+id/trippreferences_vg_taxispecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trippreferences_tv_passengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/trippreferences_tv_passengers"
                    android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textColor="@android:color/white"/>

                <codigo.labplc.mx.mitaxiusuario.googlemaps.groups.MyViewGroup
                    android:id="@+id/trippreferences_vg_passengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>